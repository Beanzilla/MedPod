<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="FurnitureBase" Name="MedPodBedBase" Abstract="True">
		<thingClass>MedPod.Building_BedMedPod</thingClass>
		<altitudeLayer>Building</altitudeLayer>
		<soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
		<selectable>true</selectable>
		<constructEffect>ConstructMetal</constructEffect>
		<comps>
			<li Class="CompProperties_AssignableToPawn">
				<drawAssignmentOverlay>false</drawAssignmentOverlay>
				<compClass>CompAssignableToPawn_Bed</compClass>
			</li>
		</comps>
		<tickerType>Normal</tickerType>
		<drawerType>MapMeshAndRealTime</drawerType>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<repairEffect>Repair</repairEffect>
		<canOverlapZones>false</canOverlapZones>
		<passability>PassThroughOnly</passability>
		<defaultPlacingRot>South</defaultPlacingRot>
	</ThingDef>

	<!-- ========== Invisible Blocker, which adds a high pathCost to the main machinery part of the MedPod, and is dynamically spawned/despawned with the MedPod itself ========== -->

	<ThingDef>
		<defName>MedPodInvisibleBlocker</defName>
		<label>Invisible Blocker</label>
		<thingClass>Building</thingClass>
		<category>Mote</category>
		<graphicData>
			<texPath>Things/Building/InvisibleTexture</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<size>(3,1)</size>
		<selectable>false</selectable>
		<passability>PassThroughOnly</passability>
		<pathCost>150</pathCost>
		<defaultPlacingRot>South</defaultPlacingRot>
		<menuHidden>true</menuHidden>
		<building>
			<isInert>true</isInert>
			<ai_chillDestination>false</ai_chillDestination>
		</building>
	</ThingDef>

	<!-- ========== Standard MedPod ========== -->

	<ThingDef ParentName="MedPodBedBase">
		<defName>MedPodStandard</defName>
		<label>MedPod</label>
		<description>An advanced hospital bed that uses atomic reconstruction to treat nearly all kinds of injuries and diseases, including regenerating missing organs and limbs.</description>
		<graphicData>
			<texPath>Things/Building/Furniture/MedPod</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(4,5)</drawSize>
			<shadowData>
				<volume>(1,0.7,3)</volume>
				<offset>(0,0,0)</offset>
			</shadowData>
		</graphicData>
		<castEdgeShadows>false</castEdgeShadows>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<WorkToBuild>2800</WorkToBuild>
			<Mass>35</Mass>
			<Flammability>1.0</Flammability>
			<BedRestEffectiveness>1</BedRestEffectiveness>
			<Comfort>0.80</Comfort>
		</statBases>
		<size>(3,3)</size>
		<costStuffCount>40</costStuffCount>
		<costList>
			<Plasteel>80</Plasteel>
			<ComponentIndustrial>5</ComponentIndustrial>
		</costList>
		<building>
			<bed_showSleeperBody>true</bed_showSleeperBody>
			<bed_defaultMedical>true</bed_defaultMedical>
		</building>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<shortCircuitInRain>true</shortCircuitInRain>
				<basePowerConsumption>125</basePowerConsumption>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Breakdownable"/>
			<li Class="CompProperties_Forbiddable"/>
		</comps>
		<fillPercent>0.4</fillPercent>
		<pathCost>60</pathCost>
		<leaveResourcesWhenKilled>True</leaveResourcesWhenKilled>
		<canOverlapZones>false</canOverlapZones>
		<researchPrerequisites>
			<li>HospitalBed</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>12</constructionSkillPrerequisite>
		<techLevel>Spacer</techLevel>
		<uiIconScale>0.90</uiIconScale>
	</ThingDef>

	<!-- ========== Luxury MedPod (With Stuffable, Art and Quality variation) ========== -->

</Defs>